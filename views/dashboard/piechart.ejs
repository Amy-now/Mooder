<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="css/piechart.css">
</head>

<body>

    <div class="row">

            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

            <script type="text/javascript">
                // Load google charts
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);

                // Draw the chart and set the chart values
                function drawChart() {
                    var data = google.visualization.arrayToDataTable([
                        ['Task', 'Hours per Day'],
                        ['Happy', 3],
                        ['Anxious', 2],
                        ['Sad', 0],
                        ['Excited', 1],
                        ['Tired', 4],
                        ['Average', 4],
                        ['Angry', 4],
                        ['Lonely', 4]

                    ]);


                    // Optional; add a title and set the width and height of the chart
                    var options = {
                        'width': 650, 'height': 400,
                        colors: ['<%=settings.happy%>', '<%=settings.anxious%>', '<%=settings.sad%>', '<%=settings.excited%>', '<%=settings.tired%>', '<%=settings.average%>', '<%=settings.angry%>', '<%=settings.lonely%>'],
                        legend: 'none', pieSliceText: 'none'
                    };

                    // Display the chart inside the <div> element with id="piechart"
                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));
                    chart.draw(data, options);
                }
            </script>
    </div>


    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="chart-container"></div>
                    <canvas id="myChart"> </canvas>

                    <h1>hello</h1>
                    <script>
                        var ctx = document.getElementById("myChart").getContext('2d');
                        ctx.canvas.parentNode.style.width = '50%'
                        var idata = JSON.parse('');
                        var ilabel = JSON.parse('');
                        var myChart = new Chart(ctx, {
                            type: 'pie',
                            data: {
                                labels: ilabel,
                                datasets: [{
                                    label: 'Pie Dataset',
                                    data: idata,
                                    backgroundColor: [
                                        'rgba(255, 99, 132, 0.2)',
                                        'rgba(54, 162, 235, 0.2)',
                                        'rgba(255, 206, 86, 0.2)',
                                        'rgba(75, 192, 192, 0.2)',
                                        'rgba(153, 102, 255, 0.2)',
                                        'rgba(255, 159, 64, 0.2)',
                                        'rgba(51, 204, 51,0.2)',
                                        'rgb(191, 191, 63,0.2)',
                                        'rgb(63, 127, 191 ,0.2)',
                                        'rgb(63, 191, 191,0.2)',
                                        'rgb(191, 63, 127,0.2)',
                                        'rgb(46, 91, 68,0.2)'
                                    ],
                                    borderColor: [
                                        'rgba(255,99,132,1)',
                                        'rgba(54, 162, 235, 1)',
                                        'rgba(255, 206, 86, 1)',
                                        'rgba(75, 192, 192, 1)',
                                        'rgba(153, 102, 255, 1)',
                                        'rgba(255, 159, 64, 1)',
                                        'rgba(51, 204, 51,1)',
                                        'rgb(191, 191, 63,1)',
                                        'rgb(63, 127, 191,1)',
                                        'rgb(63, 191, 191,1)',
                                        'rgb(191, 63, 127,1)',
                                        'rgb(46, 91, 68,1)'
                                    ],
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                scales: {
                                    yAxes: [{
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }]
                                }
                            }
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>

</body>

</html>