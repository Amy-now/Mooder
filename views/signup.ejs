<%- include('common/header'); %>
<%- include('common/messages'); %>

<div class="row">
    <div class="col-12">
        <div class="row">
            <h1 class="col-12">Sign Up</h1>
        </div>

        <form class="container-fluid" action="" method = "POST">  
            <div class="row form-group">
                <label class="sr-only col-12" for="">Username</label>
                <input 
                    class="form-control col-12" 
                    type="text"
                    
                    name="username"
                    
                    placeholder="Username">
			</div>
			
            <div class="row form-group">
                <label class="sr-only col-12" for="">Email</label>
                <input class="form-control col-12" 
                type="email" 

                name="email"
                
                placeholder="Email">
			</div>
			
            <div class="row form-group">
                <label class="sr-only col-12" for="">Password</label>
                <input 
                    class="form-control col-12" 
                    type="password" 
                    name="password"
                    placeholder="Password">
            </div>
            
            <div class="row form-group">
                <label class="sr-only col-12" for="">Password2</label>
                <input 
                    class="form-control col-12" 
                    type="password" 
                    name="password2"
                    placeholder="Confirm Password">
			</div>



            <div class="row">
                    <button type="submit" class="col-8 offset-2 text-center btn btn-primary pull-right">Register <i
							class="fa fa-chevron-right"></i></button>		
			</div>

        </form>
        
        <div class="row">
            <p class="col-12">  </p>   
        </div>

